{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "vitest"
    ],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}